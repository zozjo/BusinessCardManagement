<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" rel="stylesheet" />
<div class="InputMainDiv">
    <div class="col-lg-2 col-sm-2 centerText logout2">
        <div class="logoutText">
            <a href="~/Home/Logout"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>
    <br />
    <h2 class="buss-Car-Algin">Business card</h2>
    <div class="col-md-12">
        <img width="300" src="~/Content/Images/undraw_Upload_re_pasx-removebg-preview.png" />
    </div>
    <h3>Add new business card, uplode Your CSV XML or QR code</h3>
    <input type="file" style="margin: auto;cursor: pointer;" id="file" name="postedFile" onchange="checkfile(this)" />
    <div class="col-md-12 d-flex">
        <div data-toggle="modal" data-target="#exampleModal" class="Uplode">Add Through UI</div>
        <div class="Uplode"><a style="font-weight: unset;" href="~/Home/BusinessCard">View business card</a></div>
    </div>

</div>


<!-- Modal -->
<div class="modal fade" data-backdrop="static" data-keyboard="false" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="">
                <input type="file" accept=".jpg, .jpeg, .png" onchange="encodeImgtoBase64(this)" style="    display: none;" id="Image" name="custId" value="">

                <div class="col-md-12">
                    <h3>
                        Click to add or change image
                    </h3>

                    <img class="userImage" id="PicImage" src="~/Content/Images/user.png" />
                </div>
                <div class="col-md-12 t-left">
                    <label class="col-md-6 col-sm-12 d-grid">
                        Name
                        <input class="ui-input" type="text" id="Name" name="name" value="" />
                    </label>
                    <label class="col-md-6 col-sm-12 d-grid">
                        Gender
                        <input class="ui-input" id="Gender" type="text" name="name" value="" />
                    </label>
                </div>
                <div class="col-md-12 t-left">
                    <label class="col-md-6 col-sm-12 d-grid">
                        Date of birth
                        <input class="ui-input" id="DateOfBirth" type="text" name="name" value="" />
                    </label>
                    <label class="col-md-6 col-sm-12 d-grid">
                        Email
                        <input class="ui-input" id="Email" type="text" name="name" value="" />
                    </label>
                </div>
                <div class="col-md-12 m-b-30 t-left">
                    <label class="col-md-6 col-sm-12 d-grid">
                        Phone
                        <input class="ui-input" id="Phone" type="text" name="name" value="" />
                    </label>
                    <label class="col-md-6 col-sm-12 d-grid ">
                        Address
                        <input class="ui-input" id="Address" type="text" name="name" value="" />
                    </label>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="CancelNewCard" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="SaveNewCard" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>


